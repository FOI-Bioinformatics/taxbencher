/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running tests with raw profiler outputs
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to test the pipeline with raw profiler
    outputs that require taxpasta standardisation.

    Use as follows:
        nextflow run FOI-Bioinformatics/taxbencher -profile test_raw,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

process {
    resourceLimits = [
        cpus: 2,
        memory: '6.GB',
        time: '6.h'
    ]
}

params {
    config_profile_name        = 'Test profile (raw profiler outputs)'
    config_profile_description = 'Test dataset using raw profiler outputs requiring taxpasta standardisation'

    // Limit resources
    max_cpus   = 2
    max_memory = '6.GB'
    max_time   = '6.h'

    // Input data - raw profiler outputs
    input          = "${projectDir}/assets/test_data/samplesheet_test_raw.csv"
    gold_standard  = "${projectDir}/assets/test_data/gold_standard.bioboxes"

    // Output
    outdir = 'results_test_raw'

    // Save intermediate standardised files for verification
    save_standardised_profiles = true
}
