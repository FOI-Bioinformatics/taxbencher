/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running realistic tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Uses realistic dataset with sufficient diversity to avoid OPAL visualization bugs.
    This test profile uses data that mirrors production use cases.

    Use as follows:
        nextflow run FOI-Bioinformatics/taxbencher -profile test_realistic,<conda/wave> --outdir <OUTDIR>

    Note: Requires conda or wave profile due to TAXPASTA_TO_BIOBOXES dependencies
----------------------------------------------------------------------------------------
*/

process {
    resourceLimits = [
        cpus: 2,
        memory: '6.GB',
        time: '6.h'
    ]
}

params {
    config_profile_name        = 'Realistic test profile'
    config_profile_description = 'Realistic test dataset with sufficient diversity for OPAL'

    // Limit resources
    max_cpus   = 2
    max_memory = '6.GB'
    max_time   = '6.h'

    // Input data - realistic dataset with 36+ taxa
    input          = "${projectDir}/assets/test_data/samplesheet_realistic.csv"
    gold_standard  = "${projectDir}/assets/test_data/gold_standard_realistic.bioboxes"

    // Output
    outdir = 'results_test_realistic'
}
