/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running realistic tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines realistic test dataset that should pass OPAL evaluation successfully.

    This profile uses more realistic test data with:
    - Multiple classifiers (kraken2, metaphlan, centrifuge)
    - 40+ taxa across all taxonomic ranks
    - Sufficient abundance data for OPAL statistical functions
    - Proper CAMI Bioboxes format with full lineage paths

    Use as follows:
        nextflow run FOI-Bioinformatics/taxbencher -profile test_realistic,<docker/singularity/conda> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

process {
    resourceLimits = [
        cpus: 4,
        memory: '8.GB',
        time: '8.h'
    ]
}

params {
    config_profile_name        = 'Test realistic profile'
    config_profile_description = 'Realistic test dataset with multiple classifiers for OPAL evaluation'

    // Limit resources
    max_cpus   = 4
    max_memory = '8.GB'
    max_time   = '8.h'

    // Input data - realistic dataset
    input          = "${projectDir}/assets/test_data/samplesheet_realistic.csv"
    gold_standard  = "${projectDir}/assets/test_data/gold_standard_realistic.bioboxes"

    // Output
    outdir = 'results_test_realistic'
}
